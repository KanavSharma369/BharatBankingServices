<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
  	<servlet-name>AllCustomerController</servlet-name>
  	<servlet-class>com.controller.AllCustomerController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CustomerDetailsController</servlet-name>
  	<display-name>CustomerDetailsController</display-name>
  	<description></description>
  	<servlet-class>com.controller.CustomerDetailsController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>TransactionController</servlet-name>
  	<display-name>TransactionController</display-name>
  	<description></description>
  	<servlet-class>com.controller.TransactionController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>AllCustomerController</servlet-name>
  	<url-pattern>/viewCustomers</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CustomerDetailsController</servlet-name>
  	<url-pattern>/getDetails</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>TransactionController</servlet-name>
  	<url-pattern>/makeTransaction</url-pattern>
  </servlet-mapping>

  
</web-app>
